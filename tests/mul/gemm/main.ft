@function split {
    runtime = "python"
    codeDir = "./code"
    handler = "index.split"
}

@function merge {
    runtime = "python"
    codeDir = "./code"
    handler = "index.merge"
}

@function compute {
    runtime = "python"
    codeDir = "./code"
    handler = "index.compute"
}

@function gemm {
    runtime = "python"
    codeDir = "./code"
    handler = "index.gemm"
}

@application gemmapp {
    functions = [split, merge, compute, gemm]
    defaultProvider = kn
    providers = [kn,ali,k8s]
    inputExamples = [
        {
            value = {
                matrix_size = 8
                block_size = 4
            }
        }
    ]
}

@provider kn {
    kind = 'knative'
    registry = "192.168.0.100:5000"
}

@provider ali {
    kind = 'aliyun'
}

@provider k8s {
    kind = 'k8s'
    registry = "192.168.0.100:5000"
}