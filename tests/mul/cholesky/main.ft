@function split {
    runtime = "python"
    codeDir = "./code"
    handler = "index.split"
}

@function merge {
    runtime = "python"
    codeDir = "./code"
    handler = "index.merge"
}

@function compute {
    runtime = "python"
    codeDir = "./code"
    handler = "index.compute"
}

@function cholesky {
    runtime = "python"
    codeDir = "./code"
    handler = "index.cholesky"
}

@application choleskyapp {
    functions = [split, merge, compute, cholesky]
    defaultProvider = kn
    providers = [kn,ali,k8s]
    inputExamples = [
        {
            value = {
                A = [[4, 12, -16], [12, 37, -43], [-16, -43, 98]]
                block_size = 2
            }
        }
    ]
}

@provider kn {
    kind = 'knative'
    registry = "192.168.0.100:5000"
}

@provider ali {
    kind = 'aliyun'
}

@provider k8s {
    kind = 'k8s'
    registry = "192.168.0.100:5000"
}