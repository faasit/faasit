@function reverse {
    runtime = "python"
    codeDir = "./code"
    handler = "index.handler"
}

@application main {
    functions = [reverse]
    providers = [kn,k8s,ali]
    defaultProvider = kn
    inputExamples = [
        {
            value = {
                instanceId = "test-instance"
            }
        }
    ]
}

@provider kn {
    kind = "knative"
    registry = "192.168.28.220:5000"
    redis_data = "./data"
}

@provider k8s {
    kind = "k8s"
    registry = "192.168.28.220:5000"
    redis_data = "./data"
}

@provider ali {
    kind = "aliyun"
    oss = {
        bucket = "test"
        region = "cn-handzhou"
    }
}