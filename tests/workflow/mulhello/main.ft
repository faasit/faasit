@function hello1 {
    runtime = "python"
    codeDir = "./code"
    handler = "index.hello1"
}

@function hello2 {
    runtime = "python"
    codeDir = "./code"
    handler = "index.hello2"
}

@workflow hello {
    functions = [hello1, hello2]
    codeDir = "./code"
    handler = "index.hello"
    runtime = "python"
}

@application helloapp {
    workflow = hello
    defaultProvider = kn
    providers = [ali, kn, k8s]
}

@provider ali {
    kind = 'aliyun'
}

@provider kn {
    kind = 'knative'
    registry = "192.168.0.100:5000"
}

@provider k8s {
    kind = "k8s"
    registry = "192.168.0.100:5000"
}