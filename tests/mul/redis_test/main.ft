@function funca {
    runtime = "python"
    codeDir = "./code"
    handler = "index.funca"
}
@function funcb {
    runtime = "python"
    codeDir = "./code"
    handler = "index.funcb"
}



@application helloapp {
    functions = [funca,funcb]
    defaultProvider = kn
    providers = [kn, ali,k8s]
}

@provider kn {
    kind = 'knative'
    registry = "192.168.0.100:5000"
    redis_data = "./data"
}

@provider ali {
    kind = "aliyun"
    oss = {
        bucket = "test"
        region = "cn-handzhou"
    }
}

@provider k8s {
    kind = 'k8s'
    registry = "192.168.0.100:5000"
    redis_data = "./data"
}