@function hello1 {
    runtime = "python"
    codeDir = "./code"
    handler = "hello.hello1"
}

@function hello2 {
    runtime = "python"
    codeDir = "./code"
    handler = "hello.hello2"
}

@application helloapp {
    functions = [hello1, hello2]
    defaultProvider = kn
    providers = [ali, kn, k8s]
    inputExamples = [
        {
            value = {
                text = "Hello world this is a happy day"
                batchSize = 3
            }
        }
    ]
}

@provider ali {
    kind = 'aliyun'
}

@provider kn {
    kind = 'knative'
    registry = "192.168.0.100:5000"
}

@provider k8s {
    kind = "k8s"
    registry = "192.168.0.100:5000"
}