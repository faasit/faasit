@function reverse {
    runtime = "python"
    codeDir = "./code"
    handler = "index.handler"
}

@application main {
    functions = [reverse]
    providers = [kn]
    defaultProvider = kn
    inputExamples = [
        {
            value = {
                instanceId = "test-instance"
            }
        }
    ]
}

@provider kn {
    kind = "knative"
    registry = "192.168.0.100:5000"
    redis_data = "./data"
}